<h3>Sign in</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: "form"}) do |f| %>

  <div class="form-group">
  	<%= f.label :email %><br />
  	<%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group"><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="submit"><%= f.submit "Sign in", class: "btn btn-primary" %></div>
  
<% end %>

<div><%= link_to "Forgot your password?", new_password_path(resource_name) %></div>
